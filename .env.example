# ============================================
# DATABASE CONFIGURATION (Supabase PostgreSQL)
# ============================================
# Get your database URL from Supabase Dashboard:
# 1. Go to https://supabase.com/dashboard/project/<your-project-id>/settings/database
# 2. Copy the "Connection string" from the "Connection Info" section
# 3. Replace [YOUR-PASSWORD] with your database password

DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.lbdspzxxrqlppuryeuai.supabase.co:5432/postgres

# Optional: Supabase API credentials (if using Supabase client libraries)
SUPABASE_URL=https://lbdspzxxrqlppuryeuai.supabase.co
SUPABASE_KEY=your-supabase-anon-key-here

# ============================================
# FLASK CONFIGURATION
# ============================================
# Generate a secure secret key using: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production

# Flask environment (development/production)
FLASK_ENV=production
FLASK_DEBUG=False

# ============================================
# RENDER HOSTING CONFIGURATION
# ============================================
# Port for Render deployment (Render automatically sets this)
PORT=10000

# Render will auto-inject these, but you can set them for local testing:
# RENDER=true
# RENDER_EXTERNAL_URL=https://your-app-name.onrender.com
# RENDER_GIT_COMMIT=abc123
# RENDER_SERVICE_NAME=your-service-name

# ============================================
# DATABASE SECURITY (Supabase)
# ============================================
# Your Supabase project reference ID
SUPABASE_PROJECT_REF=lbdspzxxrqlppuryeuai

# Database connection pooling settings (optional)
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================
# APPLICATION SETTINGS
# ============================================
# Set to 'True' to enable additional logging
VERBOSE_LOGGING=False

# Timezone for the application
TZ=Asia/Kolkata
